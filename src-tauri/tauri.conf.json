{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OpenCode Talk",
  "version": "0.1.0",
  "identifier": "com.opencode.talk",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "label": "main",
        "title": "OpenCode Talk",
        "width": 400,
        "height": 500,
        "minWidth": 350,
        "minHeight": 400,
        "resizable": true,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": true,
        "visible": true,
        "skipTaskbar": false,
        "center": false,
        "x": 100,
        "y": 100
      },
      {
        "label": "settings",
        "title": "OpenCode Talk Settings",
        "width": 600,
        "height": 700,
        "minWidth": 500,
        "minHeight": 600,
        "resizable": true,
        "visible": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "scripts/*"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15",
      "entitlements": "./entitlements.plist"
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
